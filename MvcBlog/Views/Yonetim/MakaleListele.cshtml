@model IEnumerable<MvcBlog.Models.Makale>

@{
    Layout = null;
}

    <table border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YayimTarihi)
            </th>
            <th>
               Makale Tip
            </th>
            <th>
              Kategori
            </th>
            <th>
               Yazar
            </th>
            <th>
                Resim
            </th>
            <th>
               Goruntulenme Sayisi
            </th>
           
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icerik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YayimTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakaleTip.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kullanici.aspnet_Users.UserName)
)
            </td>
            <td>
                <img src ="@item.Resim.KucukResimYol" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goruntulenme)
            </td>
            
            <td>
                @Html.ActionLink("Duzenle", "MakaleDuzenle", new { id=item.Id }) 
               
                @Html.ActionLink("Sil", "Sil", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>

